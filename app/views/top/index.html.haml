.container
  .banner
    チャットグループが作成されました。
  .left-contents
    .user-menu
      %h2 Shuhei Kaneko
      =link_to fa_icon("cog 2x")
      =link_to fa_icon("edit 2x")
    .group-menu
      -# 以下はテーブル実装時にeachで書き直す予定
      - for i in 1..3
        .group-menu__content
          %h2 sample_group#{i}
          %p sample_message#{i}
        -# ここまで
  .right-contents
    .selected-group
      .selected-group__name
        %h2 sampleグループ
        %p Menbers: sample太郎, sample子, sample平
      =link_to "Edit",'',class: "edit"
    .right-contents__chat-space
      .chat-space__tweet
        %p.tweet--name sample太郎
        %p.tweet--time 2017/02/24 15:42
        %p.tweet say sample
      .chat-space__writeme
        = form_for('') do |f|
          = f.text_field :message, placeholder: "   type a message", class: "text"
          = f.submit "send", class: "send"
        = link_to fa_icon("image 2x")
