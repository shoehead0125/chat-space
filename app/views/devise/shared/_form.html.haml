.field
  .field-label
    = f.label :name
.field-input
  = f.text_field :name, autofocus: true
.field
  .field-label
    = f.label :email
  .field-input
    = f.email_field :email
.field
  .field-label
    = f.label :password
    %i (変更したくない場合は、空白のままにしておいてください)
  .field-input
    = f.password_field :password, autocomplete: "off"
.field
  .field-label
    = f.label :password_confirmation
  .field-input
    = f.password_field :password_confirmation, autocomplete: "off"
